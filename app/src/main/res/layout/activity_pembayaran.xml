<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_2"
    tools:context=".PembayaranActivity">

    <ImageView
        android:id="@+id/check"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/pembayaran_berhasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pembayaran Berhasil"
        android:layout_below="@+id/check"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textColor="@color/warna_text"
        android:gravity="center"/>

    <TextView
        android:textSize="20dp"
        android:padding="20dp"
        android:textColor="@color/warna_text"
        android:layout_below="@+id/pembayaran_berhasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="4dp"
        android:text="@string/terimakasih"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/kembali"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/orange">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="28dp"
            android:text="Kembali ke Home"/>
    </LinearLayout>


</RelativeLayout>